<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".EditCategory">
    <include
        android:layout_height="50dp"
        android:layout_width="match_parent"
        layout="@layout/app_bar_main"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar_edit_category"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_card"
        android:padding="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_below="@+id/toolbar_edit_category">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:id="@+id/icon"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_below="@+id/toolbar_edit_category"
            app:cardCornerRadius="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Name"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff"
                android:background="@color/fui_transparent"
                android:id="@+id/category_name"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select an icon"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/name_card"
        android:id="@+id/txt"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/icons_grid"
        android:layout_above="@+id/btn_layout"
        android:layout_below="@+id/txt" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_layout"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/changeButton"
            android:text="Update"
            android:background="@drawable/btn_border_layout"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>